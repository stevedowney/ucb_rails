<div class="modal fade" id="ldap-person-search-modal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h2>Search For Person</h2>
  </div>

  <div class="modal-body">
    <%- path = defined?(search_path) ? search_path : ucb_rails_ldap_person_search_path %>
    <%= form_tag(path, :class => "well form-inline", :id => 'ldap-person-search-form', :method => :get, :remote => true) do %>
      <label for="first_name">First Name</label>
      <input type="text" class="input-medium" name="first_name" id="first_name" />

      <label for="last_name">Last Name</label>
      <input type="text" class="input-medium" name="last_name" id="last_name" />

      <%= submit_tag('Search', :class => 'btn btn-primary') %>
      <%= link_to("Clear", "#", :class => "btn", :id => "ldap-person-search-clear-btn") %>
    <% end %>
    <br/>
    <div id="ldap-person-search-results"></div>
  </div>

  <div class="modal-footer">
    <a href="#" id='modal-close-btn' class="btn" data-dismiss="modal">Close</a>
  </div>
</div>
