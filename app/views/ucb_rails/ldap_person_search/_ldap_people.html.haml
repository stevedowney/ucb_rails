- if @ldap_entries.empty?
  %p No records were found.
- else 
  = ucbr_table_tag(class: 'table-condensed') do
    %thead
      %tr
        %th{style: 'width="1%"'}
        %th First Name
        %th Last Name
        %th Email
        %th Department
    %tbody
      - @ldap_entries.each do |entry|
      -   entry_id = "ldap_uid_#{entry.uid}" 
        %tr{id: entry_id, class: ldap_entry_class(entry.uid)}
          %td= link_to_ldap_person_entry(entry) 
          %td= entry.first_name 
          %td= entry.last_name 
          %td= entry.email 
          %td= entry.departments 

