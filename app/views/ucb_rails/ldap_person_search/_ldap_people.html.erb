<% if @ldap_entries.empty? %>
  <p>No records were found.</p>
<% else %>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th width="1%"></th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Department</th>
      </tr>
    </thead>

    <tbody>
      <% @ldap_entries.each do |entry| -%>
      <% entry_id = "ldap_uid_#{entry.uid}" %>
      <tr id="<%= entry_id %>" class="<%= ldap_entry_class(entry.uid)%>">
        <td><%= link_to_ldap_person_entry(entry.uid) %></td>
        <td><%= entry.first_name %></td>
        <td><%= entry.last_name %></td>
        <td><%= entry.email %></td>
        <td><%= entry.departments %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>